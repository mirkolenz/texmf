\newcommand{\themedfile}[1]{%
	\if@dark%
		#1-dark%
	\else%
		#1-light%
	\fi%
}

\newcommand{\themedbox}[2]{%
	\if@dark%
		{\setlength{\fboxsep}{#1}\colorbox{fgColor}{#2}}%
	\else%
		#2%
	\fi%
}

